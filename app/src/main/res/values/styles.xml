<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/PurpleActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PurpleActionBar"
        parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/main_purple</item>
        <item name="logo">@drawable/optiwifi_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

</resources>



